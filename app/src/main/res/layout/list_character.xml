<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/characterCardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/characterImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/character" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Андрей Чеченов"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/characterCardView"
            app:layout_constraintBottom_toBottomOf="@id/characterCardView"
            app:layout_constraintLeft_toRightOf="@id/characterCardView"/>


</androidx.constraintlayout.widget.ConstraintLayout>