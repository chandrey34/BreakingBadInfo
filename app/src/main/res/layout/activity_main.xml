<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/character_btn"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorBtn"
        android:text="@string/сharacters_nameBtn"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/death_btn"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="195dp"
        android:backgroundTint="@color/colorBtn"
        android:text="@string/death_nameBtn"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/series_btn" />

    <Button
        android:id="@+id/quotes_btn"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="195dp"
        android:backgroundTint="@color/colorBtn"
        android:text="@string/quotes_nameBtn"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/series_btn" />

    <Button
        android:id="@+id/series_btn"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="234dp"
        android:backgroundTint="@color/colorBtn"
        android:text="@string/series_nameBtn"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>